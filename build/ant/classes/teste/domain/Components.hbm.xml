<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="teste.domain.Components" table="Components" abstract="true">
        <meta attribute="scope-class">public abstract</meta>

        <id name="id" type="long">
            <generator class="native"/>
        </id>

        <discriminator column="discriminator"/>
        <timestamp source="db" name="updateDate" unsaved-value="null"/>

        <many-to-one name="section" class="teste.domain.Section" column="idSection" outer-join="true" cascade="none"/>

        <subclass name="teste.domain.ComponentsImpl" discriminator-value="ComponentsImpl">
            <meta attribute="scope-class">public abstract</meta>
             <subclass name="teste.domain.ComponentText" discriminator-value="ComponentText">
                <property name="text" type="string"/>
                <subclass name="teste.domain.ComponentTextImpl" discriminator-value="ComponentTextImpl"/>
            </subclass>
        </subclass>
    </class>

</hibernate-mapping>