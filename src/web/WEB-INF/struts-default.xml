<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>


    <action-mappings>
        <!--Portal Forward-->
        <action path="/home" forward="page.home"/>
        <action path="/login" forward="page.login"/>
        <action path="/logout" forward="page.logout"/>
        <action path="/user" forward="page.user"/>
        <action path="/page" forward="page.page"/>
        <action path="/editPage" forward="page.editPage"/>
        <action path="/editSection" forward="page.editSection"/>
        <action path="/verPaginas" forward="page.verPaginas"/>
        <action path="/addimg" forward="page.addimg"/>

    </action-mappings>

    <controller maxFileSize="50971520" processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/tiles-default.xml"/>
    </plug-in>


</struts-config>