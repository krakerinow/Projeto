<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="teste.domain.UserSession" table="user_session">
        <meta attribute="scope-class">public abstract</meta>
        <id name="id" type="long">
            <generator class="native"/>
        </id>
        <discriminator column="discriminator"/>
        <property name="cookie" type="string"/>
        <many-to-one name="user" class="teste.domain.User" column="user_id" outer-join="true" cascade="none"/>
        <subclass name="teste.domain.UserSessionImpl" discriminator-value="UserSessionImpl"/>
    </class>
</hibernate-mapping>